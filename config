[module/keyboard]
type = internal/xkeyboard


[module/date]
type = internal/date
interval = 2
 
date = "   %d.%m.%Y%{A}"
date-alt = "   %A, %d. %B"
 
format-padding = 30
label = "%{O-60} %date%"
format-foreground = #ececec
format-background = background
label-font = 2

[module/time]
type = internal/date
interval = 1 
 
time = " %{A3:gsimplecal:}     %H:%M:%S"
time-alt = "%H:%M:%S"
 
format-padding = 2
label = "%time%"
label-font = 2
 

 

